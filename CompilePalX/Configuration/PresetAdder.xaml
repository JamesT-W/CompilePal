<controls:MetroWindow x:Class="CompilePalX.PresetAdder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="Preset Template Chooser" Height="424" Width="918"  BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" >
    <Grid>
        <DataGrid Name="ConfigDataGrid" Margin="10,10,10,10" AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding}" MouseDoubleClick="ConfigDataGrid_MouseUp" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{ Binding Name}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</controls:MetroWindow>
